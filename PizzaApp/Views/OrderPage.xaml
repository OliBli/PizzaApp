<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PizzaApp.Views.OrderPage"
             Title="OrderPage">
    <VerticalStackLayout>
        <Label Text="Debit Card"></Label>
        
        <Entry x:Name="CardEntry" TextChanged="Numbers_TextChanged" Placeholder="The 16 numbers" ></Entry>
        <Entry x:Name="DateEntry" TextChanged="Date_TextChanged" Placeholder="mm/yy"></Entry>
        <Entry x:Name="CvvEntry" TextChanged="CVV_TextChanged" Placeholder="CVV"></Entry>

        <Label Text="Address"></Label>
        <Entry x:Name="Address" Placeholder="Your Address"></Entry>

        <Button Text="Order" Clicked="onOrderdClicked"></Button>
        
    </VerticalStackLayout>
</ContentPage>